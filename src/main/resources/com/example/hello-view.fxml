<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.HelloController">
    <columnConstraints>
        <ColumnConstraints percentWidth="100" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="100"/>
        <RowConstraints percentHeight="1"/>
    </rowConstraints>
    <WebView GridPane.columnIndex="0" GridPane.rowIndex="0" fx:id="learningUnit"/>
    <HBox GridPane.columnIndex="0" GridPane.rowIndex="1" alignment="CENTER" style="-fx-background-color: white">
        <Button fx:id="getSections" onAction="#getSections">Sections</Button>
    </HBox>
</GridPane>